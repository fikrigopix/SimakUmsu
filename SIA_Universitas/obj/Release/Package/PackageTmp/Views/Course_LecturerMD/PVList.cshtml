@model IEnumerable<SIA_Universitas.Models.Acd_Course_Lecturer>

<div class="table-responsive">
    <table class="table table-striped table-hover table-responsive table-condensed">
        <tr>
            <th>
                No.
            </th>
            @*<th>@Html.DisplayNameFor(model => model.Order_Id)</th>*@
            <th>
                @Html.DisplayNameFor(model => model.Acd_Course.Course_Code)
            </th>
            <th>
                @Html.DisplayName("Nama Mata Kuliah")
            </th>
            <th>Tindakan</th>
        </tr>
        @{int count = 1;}
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-right">
                    @(count++).
                </td>
                @*<td>@Html.DisplayFor(modelItem => item.Order_Id)</td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Acd_Course.Course_Code)
                </td>
                @*Nama Mata Kuliah*@
                <td>
                    @Html.DisplayFor(modelItem => item.Acd_Course.Course_Name)
                </td>
                <td>
                    <a class="btn btn-danger btn-sm btn-outline" href='@Url.Action("Delete", null, new { id = item.Course_Lecturer_Id })'><i class="fa fa-trash"></i>&nbsp;Hapus</a>
                </td>
            </tr>
        }
    </table>
</div>
