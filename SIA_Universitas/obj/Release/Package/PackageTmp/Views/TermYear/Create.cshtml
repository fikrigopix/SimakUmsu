@model SIA_Universitas.Models.Mstr_Term_Year

@{
    ViewBag.Title = "TermYear";
    short? Year_Id = ViewBag.currentYear;
}
<h3>Semester Berlaku</h3>
<div class="row">
    <div class="col-md-6">
        <div class="panel panel-default bootstrap-admin-no-table-panel">
            <div class="panel-heading">
                <div class="pull-right">
                    <a href="@Url.Action("Index", new { Entry_Year_Id = Year_Id })" title="Batal"><i class="badge">Batal</i></a>
                </div>
                <div class="bootstrap-admin-box-title right text-success">
                    Tambah Data
                </div>
            </div>
            <div class="bootstrap-admin-panel-content bootstrap-admin-no-table-panel-content collapse in">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true)
                    <div class="form-group">
                        @Html.LabelFor(model => model.Year_Id, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.Label(Convert.ToString(Year_Id))
                            @Html.Hidden("Year_Id", Year_Id)
                            @Html.ValidationMessageFor(model => model.Year_Id)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Term_Id, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.DropDownList("Term_Id", null, String.Empty, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Term_Id)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-4 col-md-8">
                            <button type="submit" name="submit" class="btn btn-success">
                                Simpan <span class="glyphicon glyphicon-floppy-save" style="color:white" aria-hidden="true"></span>
                            </button>
                        </div>
                    </div>

                    @*<div class="form-group">
                        @Html.LabelFor(model => model.Entry_Year_Id, "Entry_Year_Id", htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.Hidden("Entry_Year_Id", Year_Id)
                            @Html.ValidationMessageFor(model => model.Entry_Year_Id)
                        </div>
                    </div>*@

                    <div class="form-group">
                        @*@Html.LabelFor(model => model.Term_Year_Name, htmlAttributes: new { @class = "control-label col-md-2" })*@
                        <div class="col-md-10">
                            @Html.HiddenFor(model => model.Term_Year_Name)
                            @Html.ValidationMessageFor(model => model.Term_Year_Name)
                        </div>
                    </div>

                    <div class="form-group">
                        @*@Html.LabelFor(model => model.Created_By, htmlAttributes: new { @class = "control-label col-md-2" })*@
                        <div class="col-md-10">
                            @Html.HiddenFor(model => model.Created_By)
                            @Html.ValidationMessageFor(model => model.Created_By)
                        </div>
                    </div>

                    <div class="form-group">
                        @*@Html.LabelFor(model => model.Created_Date, htmlAttributes: new { @class = "control-label col-md-2" })*@
                        <div class="col-md-10">
                            @Html.Hidden("Created_Date", DateTime.Now)
                            @Html.ValidationMessageFor(model => model.Created_Date)
                        </div>
                    </div>

                    <div class="form-group">
                        @*@Html.LabelFor(model => model.Modified_By, htmlAttributes: new { @class = "control-label col-md-2" })*@
                        <div class="col-md-10">
                            @Html.HiddenFor(model => model.Modified_By)
                            @Html.ValidationMessageFor(model => model.Modified_By)
                        </div>
                    </div>

                    <div class="form-group">
                        @*@Html.LabelFor(model => model.Modified_Date, htmlAttributes: new { @class = "control-label col-md-2" })*@
                        <div class="col-md-10">
                            @Html.HiddenFor(model => model.Modified_Date)
                            @Html.ValidationMessageFor(model => model.Modified_Date)
                        </div>
                    </div>
                </div>
            }
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @if (ViewBag.message != null)
    {
        <script>

            $(document).ready(function sweet () {

                sweetAlert("Oops...!", "@ViewBag.message", "error");
            });

        </script>

    }
}
