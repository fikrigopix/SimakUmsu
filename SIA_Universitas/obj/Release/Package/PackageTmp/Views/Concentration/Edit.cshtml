@model SIA_Universitas.Models.Mstr_Concentration

@{
    ViewBag.Title = "Concentration";
}
<h3>Konsentrasi Prodi @ViewBag.Department.Department_Name</h3>
<div class="row">
    <div class="col-md-6">
        <div class="panel panel-default bootstrap-admin-no-table-panel">
            <div class="panel-heading">
                <div class="pull-right">
                    <a href="@Url.Action("Index", new { Department_Id = Model.Department_Id })" title="Batal" class="badge">Batal</a>
                </div>
                <div class="bootstrap-admin-box-title right text-success">
                    <b>Ubah Data</b>
                </div>
            </div>
            <div class="bootstrap-admin-panel-content bootstrap-admin-no-table-panel-content collapse in">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(model => model.Concentration_Id)
                        @Html.HiddenFor(model => model.Department_Id)

                        <div class="form-group">
                            @Html.LabelFor(model => model.Concentration_Code, htmlAttributes: new { @class = "control-label col-md-5" })
                            <div class="col-md-7">
                                @Html.TextBoxFor(model => model.Concentration_Code, new { @class = "form-control" })<text style="border-color:red; color:red">@ViewBag.message</text>
                                @Html.ValidationMessageFor(model => model.Concentration_Code)
                            </div>
                        </div>

                        @*<div class="form-group">
                                @Html.LabelFor(model => model.Department_Id, "Department_Id", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("Department_Id", String.Empty)
                                    @Html.ValidationMessageFor(model => model.Department_Id)
                                </div>
                            </div>*@

                        <div class="form-group">
                            @Html.LabelFor(model => model.Concentration_Name, htmlAttributes: new { @class = "control-label col-md-5" })
                            <div class="col-md-7">
                                @Html.TextBoxFor(model => model.Concentration_Name, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Concentration_Name)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Concentration_Name_Eng, htmlAttributes: new { @class = "control-label col-md-5" })
                            <div class="col-md-7">
                                @Html.TextBoxFor(model => model.Concentration_Name_Eng, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Concentration_Name_Eng)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Concentration_Acronym, htmlAttributes: new { @class = "control-label col-md-5" })
                            <div class="col-md-7">
                                @Html.TextBoxFor(model => model.Concentration_Acronym, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Concentration_Acronym)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Order_Id, htmlAttributes: new { @class = "control-label col-md-5" })
                            <div class="col-md-7">
                                @Html.TextBoxFor(model => model.Order_Id, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Order_Id)
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-5 col-md-7">
                                <button type="submit" name="submit" class="btn btn-success">
                                    Simpan <span class="glyphicon glyphicon-floppy-save" style="color:white" aria-hidden="true"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>