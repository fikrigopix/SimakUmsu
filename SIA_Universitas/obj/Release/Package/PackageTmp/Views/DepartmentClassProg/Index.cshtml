@*@model IEnumerable<SIA_Universitas.Models.Mstr_Department>*@
@model PagedList.IPagedList<SIA_Universitas.Models.Mstr_Department>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Index";
}

<h3>Prodi VS Program Kelas</h3>
<div class="panel panel-default bootstrap-admin-no-table-panel">
    <div class="panel-heading">
        <div class="pull-right">
        </div>
        <div class="bootstrap-admin-box-title right text-success">
            @using (Html.BeginForm("Index", "DepartmentClassProg", FormMethod.Get))
            {
                <div class="row">
                    <div class="col-md-2">
                        <i class="text-success">Jumlah Baris:</i><br />
                        @Html.TextBox("rowPerPage", ViewBag.rowPerPage as int?, htmlAttributes: new { @class = "form-control" })
                    </div>
                    <div class="col-md-3">
                        <i class="text-success">Cari berdasar Nama / Kode</i><br />
                        @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, htmlAttributes: new { @class = "form-control" })
                    </div>
                    <div class="col-md-1">
                        <br />
                        <button type="submit" name="submit" class="btn-link">
                            <span class="glyphicon glyphicon-search" style="font-size:x-large;color:green" aria-hidden="true"></span>
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="bootstrap-admin-panel-content bootstrap-admin-no-table-panel-content collapse in">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.First().Department_Code)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Department_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().ClassProgs)
                </th>
                @*<th>
                    @Html.DisplayNameFor(model => model.Acreditation_Number)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Acreditation_date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Created_By)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Created_Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Modified_By)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Modified_Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Mstr_Class_Program.Class_Prog_Code)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Mstr_Department.Department_Code)
                </th>*@
                <th><i class="glyphicon glyphicon-cog" style="color:black"></i></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Department_Code)
                    </td>
                    <td style="white-space:nowrap">
                        @Html.DisplayFor(modelItem => item.Department_Name)
                    </td>
                    <td style="white-space:nowrap">
                        @Html.DisplayFor(modelItem => item.ClassProgs)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.Acreditation_Number)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Acreditation_date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Created_By)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Created_Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Modified_By)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Modified_Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Mstr_Class_Program.Class_Prog_Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Mstr_Department.Department_Code)
                    </td>*@
                    <td align="center" style="white-space:nowrap">
                        <a href="@Url.Action("Create", new { id = item.Department_Id })" title="Proses" class="btn-xs btn-success">
                            Ubah Data <i class="glyphicon glyphicon-wrench" style="color:white"></i>
                        </a>
                    </td>
                </tr>
            }
        </table>
        @Html.PagedListPager(Model, page => Url.Action("Index",
            new { page, currentFilter = ViewBag.CurrentFilter, rowPerPage = ViewBag.rowPerPage }),
            new PagedListRenderOptions { DisplayPageCountAndCurrentLocation = true, DisplayItemSliceAndTotal = true })
    </div>
</div>
