            <div class="bootstrap-admin-panel-content bootstrap-admin-no-table-panel-content collapse in">

                @using (Html.BeginForm("Save", "StudentKhs"))
                {
                    @Html.AntiForgeryToken()
                    
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(model => model.Graduation_Reg_Id)
                            <div class="form-group">
                                @Html.LabelFor(model => model.Nim, htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    @Html.TextBoxFor(model => model.Nim, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("Nama Lengkap", htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    @Html.TextBoxFor(model => model.Full_Name, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Full_Name, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("Gender", htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    @Html.TextBoxFor(model => model.Gender_Type, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("Tempat Lahir", htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    @Html.TextBoxFor(model => model.Birth_Place, htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group panggil_date">
                                @Html.Label("Tanggal Lahir", htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-7">
                                    <div class=" input-group date">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                                        @Html.EditorFor(model => model.Birth_Date)
                                        @Html.ValidationMessageFor(model => model.Birth_Date, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("Th Ajaran Masuk", htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    <input type="text" class="form-control" disabled="disabled" value="@Model.Entry_Year_Code @Model.Term_Name" />
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("Tanggal Yudisium", htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    <input type="text" class="form-control" disabled="disabled" value="@string.Format("{0:dddd, dd MMM yyyy}", @Model.Yudisium_Date)" />
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("Tanggal Pendadaran", htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    <input type="text" class="form-control" disabled="disabled" value="@string.Format("{0:dddd, dd MMM yyyy}", @Model.Thesis_Exam_Date)" />
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("IPK", htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    @Html.TextBoxFor(model => model.Gpa, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("Jml Semester Cuti", htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    @Html.TextBoxFor(model => model.Total_Smt_Vacation, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
                                </div>
                            </div>

                            <div class="form-group">
                                    @Html.Label("Judul TA", htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    @Html.TextAreaFor(model => model.Thesis_Title, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
                                </div>
                            </div>

                            <div class="form-group">
                                    @Html.Label("Alamat Asal", htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    @Html.TextAreaFor(model => model.Address_0, htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">
                                    @Html.Label("Telp/HP", htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    @Html.TextBoxFor(model => model.Phone, htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">
                                    @Html.Label("Email", htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    @Html.TextBoxFor(model => model.Email, htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">
                                    @Html.Label("Nama Orangtua", htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    @Html.TextBoxFor(model => model.Parent_Name, htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">
                                    @Html.Label("Status Mahasiswa", htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    @Html.TextBoxFor(model => model.Register_Status_Name, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
                                </div>
                            </div>

                            <div class="form-group">
                                    @Html.Label("No. SK Yudisium", htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    @Html.TextBoxFor(model => model.Sk_Num, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
                                </div>
                            </div>

                            <div class="form-group">
                                    @Html.Label("No. Transkrip Akhir", htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    @Html.TextBoxFor(model => model.Transcript_Num, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-4 col-md-8">
                                    <button id="btnSubmit" type="submit" class="btn btn-success">
                                        Simpan <span class="glyphicon glyphicon-floppy-save" style="color:white" aria-hidden="true"></span>
                                    </button>
                                </div>
                            </div>

                        </div>
