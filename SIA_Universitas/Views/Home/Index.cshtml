@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_LayoutMasterHome.cshtml";
    if (Request.Cookies["user"] != null)
    {
        ViewBag.user = Request.Cookies["user"].Value;
    }
    else
    {
        ViewBag.user = "";
    }
}

<div id="content">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <!--panel-->
                    <div class="col-md-8">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <i class="fa fa-home fa-lg"></i> &nbsp; SELAMAT DATANG
                            </div>
                            <div class="panel-body">
                                Assalamu'alaikum
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <i class="fa fa-sign-in fa-lg"></i> &nbsp; <span>LOGIN FORM</span>
                            </div>
                            <div class="panel-body">
                                @if (!User.Identity.IsAuthenticated)
                                {
                                    using (Html.BeginForm("Index", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <div class="form-group input-group">
                                            <span class="input-group-addon">
                                                <i class="fa fa-envelope fa-fw"></i>
                                            </span>
                                            <input id="UserName" name="UserName" type="text" class="form-control" placeholder="Email">
                                        </div>
                                        <div class="form-group input-group">
                                            <span class="input-group-addon">
                                                <i class="fa fa-lock fa-fw"></i>
                                            </span>
                                            <input id="password" name="password" type="password" class="form-control" placeholder="Password">
                                        </div>
                                        <button type="submit" class="btn btn-primary">LOGIN</button>
                                        <a href="#" class="btn btn-default">
                                            <i class="fa fa-unlock-alt"></i> Lupa Password
                                        </a>
                                    }

                                }
                                @if (User.Identity.IsAuthenticated)
                                {
                                    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <div>
                                            <i class="glyphicon glyphicon-user" style="color:#2d582a;"></i> @User.Identity.Name
                                            &nbsp;&nbsp;<a href="javascript:document.getElementById('logoutForm').submit()"><i class="glyphicon glyphicon-log-out" style="color:red"></i> Logoff </a>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!--footer-->
<div id="footer">
    <div class="fill"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <p class="text-center">
                    Copyright &copy; 2016 - All Rights Reserved - Universitas Muhammadiyah Sumatera Utara (UMSU).
                    Unggul, Cerdas, Terpercaya - Berniat Ikhlas, Bekerja Tuntas. <br>

                    <span class="visible-print">-= 2015-12-16 03:18:59 =-</span>
                </p>
            </div>
        </div>
    </div>
</div>


