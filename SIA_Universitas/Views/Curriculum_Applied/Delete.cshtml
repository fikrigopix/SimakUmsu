@model SIA_Universitas.Models.Mstr_Curriculum_Applied

@{
    ViewBag.Title = "CurriculumApplied";
}

<h3>Kurikulum</h3>
<div class="row">
    <div class="col-md-6">
        <div class="panel panel-default bootstrap-admin-no-table-panel">
            <div class="panel-heading">
                <div class="pull-right">
                    <a href="@Url.Action("Index", new { Department_Id = Model.Department_Id })" title="Batal" class="badge">Batal</a>
                </div>
                <div class="bootstrap-admin-box-title right text-success">
                    <b>Hapus Data</b>
                </div>
            </div>
            <div class="bootstrap-admin-panel-content bootstrap-admin-no-table-panel-content collapse in">
                <h4>Apakah Anda yakin akan menghapus data ini?</h4>
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Curriculum_Id)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Mstr_Curriculum.Curriculum_Name)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Class_Prog_Id)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Mstr_Class_Program.Class_Program_Name)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Department_Id)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Mstr_Department.Department_Name)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Total_Sks_Core)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Total_Sks_Core)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Total_Sks_Elective)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Total_Sks_Elective)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Min_Cum_Gpa)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Min_Cum_Gpa)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Sks_Completion)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Sks_Completion)
                    </dd>
                    <dt>

                    </dt>

                    <dd>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                <button type="submit" name="submit" class="btn btn-danger">
                                    Hapus <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                </button>
                            </div>
                        }
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>
