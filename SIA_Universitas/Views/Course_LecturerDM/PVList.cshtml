@model IEnumerable<SIA_Universitas.Models.Acd_Course_Lecturer>




<div class="table-responsive">
    <table class="table table-striped table-hover table-responsive table-condensed">
        <tr>
            <th>
                No.
            </th>
            <th>                
                @Html.DisplayName("NIK")
            </th>
            <th>                
                @Html.DisplayName("Nama Dosen")
            </th>
            
            <th></th>
        </tr>
        @{int count = 1;}
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-right">
                    @(count++)
                </td>
                @*<td id="itemId" class="itemIdClass">@Html.TextBoxFor(modelItem => item.Employee_Id)</td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Emp_Employee.Nik)
                </td>
               <td>
                   @Html.DisplayFor(modelItem => item.Emp_Employee.Full_Name)                   
               </td>
                <td>
                    @*@Html.ActionLink("Delete", "Delete", new { id = item.Course_Lecturer_Id })*@
                    <a class="buttonDelete btn btn-danger btn-sm btn-outline" href='@Url.Action("Delete", null, new { id = item.Course_Lecturer_Id })'><i class="fa fa-trash"></i>&nbsp;Hapus</a>
                </td>
            </tr>
        }

    </table>
</div>
