@model SIA_Universitas.Models.Emp_Employee

@{
    ViewBag.Title = "Create";
}

<h3>Pegawai</h3>

<div class="panel panel-default bootstrap-admin-no-table-panel">
    <div class="panel-heading">
        <div class="pull-right">
            <a href="@Url.Action("Index")" title="Batal"><i class="badge">Batal</i></a>
        </div>
        <div class="bootstrap-admin-box-title right text-success">
            <b>Ubah Data</b>
        </div>
    </div>

    <div class="bootstrap-admin-panel-content bootstrap-admin-no-table-panel-content collapse in">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.Employee_Id)

                <div class="form-group">
                    @Html.LabelFor(model => model.Nik, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Nik, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Nik)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Nip, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Nip, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Nip)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Name, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Full_Name)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.First_Title, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.First_Title, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.First_Title)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Last_Title, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Last_Title, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Last_Title)
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Status", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-2">
                        @Html.DropDownList("Employee_Status_Id", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Employee_Status_Id)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button id="btnSubmit" type="submit" class="btn btn-success">
                            Simpan <span class="glyphicon glyphicon-floppy-save" style="color:white" aria-hidden="true"></span>
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>