                                        <li>@Html.ActionLink("Biaya per Paket", "Index", "CourseCostPackage")</li>
                                    </ul>
                                </li>
                                <li>
                                    <a href="#" data-toggle="dropdown" class="dropdown-toggle" data-hover="dropdown">Biaya Registrasi<b class="caret"></b></a>
                                    <ul class="dropdown-menu mega-menu animated fadeIn">
                                        <li><a href="#">Set Biaya Pra Registrasi</a></li>
                                        <li>@Html.ActionLink("Set Biaya Registrasi (SPP)", "Index", "CostSched")</li>
                                        <li>@Html.ActionLink("Set Biaya Registrasi (Resume)", "Resume", "CostSchedDetail")</li>
                                        @*<li>@Html.ActionLink("Set Biaya Registrasi (Non DPP)", "Index", "CostRegNonDPP")</li>
