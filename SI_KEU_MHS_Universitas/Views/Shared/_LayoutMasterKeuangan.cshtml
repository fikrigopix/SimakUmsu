                                    <ul class="dropdown-menu mega-menu animated fadeIn">
                                        <li>@Html.ActionLink("Set Biaya Registrasi Personal (Non DPP)", "Index", "CostRegPersonNonDPP")</li>
                                        <li><a href="#">Set Biaya Registrasi Personal DPP</a></li>
